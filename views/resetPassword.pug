doctype html
html(lang="en")
    head
        include partials/header
        
    body.login 
        .contenedor-formulario 
            h1= nombrePagina 
            if locals.mensajes  
                .alertas 
                    each categoria in Object.keys(locals.mensajes)
                        each error in mensajes [categoria]
                            .alerta(class=`${categoria}`)
                                p= error 
            p Coloca tu nueva contrase√±a
            form.caja-login(method='POST') 
                .campo 
                    label(for='password') Password:
                    input(type="text" name="password" placeholder="Nuevo Password")
                .campo.enviar 
                    input.boton(type="submit" value="Reestablecer Password")
                