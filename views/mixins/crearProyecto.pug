mixin crearProyecto(proyectoEditar = {})

    form.agregar-proyecto(action=`/nuevo-proyecto/${proyectoEditar.id || ''}` method="POST")
        .campo
            label(for="nombre") Nombre Proyecto:
            input(value=proyectoEditar.nombre  type="text" id="nombre" name="nombre" placeholder="Nombre Proyecto")
        .campo.enviar
            input(type="submit" value=`${proyectoEditar.nombre ? 'Guardar' : 'Agregar'}` class="boton")